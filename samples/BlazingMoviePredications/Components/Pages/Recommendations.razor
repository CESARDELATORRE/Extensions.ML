
<h1><span class="glyphicon glyphicon-film"></span> Movie Recommender</h1>

<hr>
<h3>Trending Movies</h3>

<div class="row">
    @if (movies != null)
    {
        foreach (var movie in movies)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-block">
                        <h3 class="card-title">@movie.MovieName</h3>
                        <a href="/Movies" class="btn btn-primary">Play Movie</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2>Something went wrong! please check the error log.</h2>
    }
</div>
<hr />
<a href="/" class="btn breadcrumb" id="select">
    <span class="glyphicon glyphicon-ok "></span> This is fun, let me try again!
</a>

@functions {
    IEnumerable<Movie> movies;
}